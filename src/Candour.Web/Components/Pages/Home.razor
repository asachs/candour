@page "/"

<PageTitle>Candour - Anonymity-First Surveys</PageTitle>

<MudContainer MaxWidth="MaxWidth.Medium" Class="mt-8">
    <MudText Typo="Typo.h3" GutterBottom="true">Candour</MudText>
    <MudText Typo="Typo.h6" Color="Color.Secondary" GutterBottom="true">
        <em>"Truth needs no name."</em>
    </MudText>
    <MudText Typo="Typo.body1" Class="mb-6">
        Anonymity-first survey tool where privacy is enforced by architecture, not by promise.
    </MudText>

    <MudGrid>
        <MudItem xs="12" md="4">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Zero PII</MudText>
                    <MudText Typo="Typo.body2">Response records contain no identity fields. Anonymity is structural.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Blind Tokens</MudText>
                    <MudText Typo="Typo.body2">HMAC-SHA256 prevents duplicates without linking responses to people.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
        <MudItem xs="12" md="4">
            <MudCard Elevation="2">
                <MudCardContent>
                    <MudText Typo="Typo.h6">Threshold Gate</MudText>
                    <MudText Typo="Typo.body2">Results locked until minimum response count met.</MudText>
                </MudCardContent>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudContainer>
